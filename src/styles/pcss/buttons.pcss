@import '@streamr/streamr-layout/pcss/variables.pcss';

:global {
    body {
        .btn {
            height: 40px;
            font-family: 'IBM Plex Mono';
            font-weight: var(--medium);
            text-transform: uppercase;
            letter-spacing: 1.5px;
            font-size: 14px;
            padding: 0px 30px;
            transition: all 0.3s;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            &a {
                text-decoration: none;
            }

            &:hover {
                text-decoration: none;
            }

            &.btn-default,
            &.btn-primary {
                color: var(--white);
                background-color: var(--blue);

                &:hover {
                    background: var(--blueDark6);
                    box-shadow: none;
                }

                &:focus,
                &:visited {
                    background: var(--blue);
                }

                &:active {
                    background: var(--blueDark3);
                }
            }
            &.btn-outline-primary {
                border: 1px solid var(--blue);
                color: var(--blue);

                &:focus,
                &:visited {
                    background: none;
                    border-color: var(--blue);
                }

                &:active {
                    border-width: 1.2px;
                }

                &:hover,
                &:active {
                    color: var(--blueDark6);
                    border-color: var(--blueDark6);
                }
            }

            &.btn-secondary,
            &.btn-outline-secondary {
                color: var(--greyDark2);
                border: 1px solid color(var(--greyDark2) alpha(60%));
                background: none;

                &:focus,
                &:visited {
                    border-color: color(var(--greyDark2) alpha(60%));
                    background: none;
                }

                :before {
                    background-color: none;
                }

                &:active {
                    border-width: 1.2px;
                    background: none;
                }

                &:hover,
                &:active {
                    color: var(--greyDark);
                    border-color: var(--greyDark2);
                    background: none;
                    :before {
                        background-color: none;
                    }
                }
            }

            &.btn-sm {
                padding: 8px;
                text-transform: none;
                line-height: 1;
                font-family: "IBM Plex Sans", sans-serif;
                font-size: 12px;
                border-radius: 5px;
                letter-spacing: 0;
                height: 28px;
                &:hover {
                    color: var(--blue);
                    border-color: var(--blue);
                }
                &:active {
                    color: var(--blueDark6);
                    border-color: var(--blueDark6);
                }
            }
        }
    }
}

@media (--xs) {
    :global {
        .btn {
            font-size: 14px;
        }
    }
}
