.dropzone {
    background-color: #D8D8D8;
    width: 100%;
    height: 400px;
    overflow: hidden;
    position: relative;
}

.previewImage {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.helpText {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
