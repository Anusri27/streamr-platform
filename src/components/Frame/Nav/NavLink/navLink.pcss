@import '../variables.pcss';

.inner {
    font-size: 0.875em;
    vertical-align: top;
}

.navLink {
    border-radius: 2px;
    display: block;
    line-height: 2.5em;
    overflow: hidden;
    padding: 0 15px;
    text-overflow: ellipsis;
    text-transform: uppercase;
    white-space: nowrap;

    &,
    &:--enter,
    &:--idle {
        color: #323232;
        outline: none;
        text-decoration: none;
    }

    &:--enter {
        background: #fafafa;
    }
}

@media (--md-up) {
    .inner {
        font-size: 0.75em;
        position: relative;

        &:before {
            background: #ff5c00;
            border-radius: 1px;
            content: '';
            height: 2px;
            left: initial;
            position: absolute;
            right: 0;
            bottom: -0.4em;
            transition: width 0.2s ease-out;
            width: 0;
        }
    }

    .navLink {
        display: inline-block;
        padding: 0;
        &,
        &:--enter,
        &:--idle {
            color: white;
        }
    }

    .opaqueNav {
        &,
        &:--enter,
        &:--idle {
            color: #323232;
        }
    }


    .navLinkParent,
    .navLink {
        &:--enter {
            background: transparent;
        }

        &:--enter .inner:before {
            left: 0;
            transition: width 0.2s ease-in, right 0s 0.15s;
            width: 100%;
        }
    }
}
