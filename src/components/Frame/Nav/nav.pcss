@import '../variables.pcss';

.nav {
    font-family: 'IBM Plex Mono', 'Hiragino Sans GB', '冬青黑体', 'SimHei', '黑体', sans-serif;
    font-size: 16px;
    font-weight: 600;
    line-height: 1em;
}

.overlay {
    position: absolute;
    left: 0;
    width: 100%;
    z-index: 10;
}

.nav,
.toggleWrapper {
    padding-bottom: 1.25em;
    padding-top: 1.25em;
}

.inner {
    position: relative;
}

.inner:after,
.toggleWrapper:after,
.navItems:after {
    content: '';
    display: block;
    clear: both;
}

.opaque {
    background: white;
}

.navItemsWrapper {
    background: white;
    height: 100%;
    left: 0;
    padding: 0 0 2.5em;
    opacity: 0.0;
    position: fixed;
    top: 0;
    transition: visibility 0s 300ms, opacity 300ms ease-in-out;
    visibility: hidden;
    width: 100%;
    z-index: 10;
}

.navItems {
    list-style: none;
    margin: 0;
    padding: 0.75em 15px 0;
    transition: padding-top 300ms ease-in-out;
}

.open {
    .navItems {
        padding-top: 0;
    }

    .navItemsWrapper {
        opacity: 1.0;
        overflow: auto;
        transition-delay: 0s, 0s;
        visibility: visible;
    }
}

.fullWidth :global(.container) {
    width: auto;
}

@media (--sm-down) {
    .nav :global(.container) {
        padding-left: 30px;
        padding-right: 30px;
    }
}

@media (--md-up) {
    .nav {
        font-weight: 500;
    }

    .fullWidth :global(.container) {
        padding-left: 30px;
        padding-right: 30px;
    }

    .navItems {
        display: block;
        float: right;
        margin: 0;
        padding: 0;
        transition: none;
    }

    .toggleWrapper {
        display: none;
    }

    .navItemsWrapper {
        background: transparent;
        float: right;
        height: auto;
        opacity: 1.0;
        padding: 0;
        position: initial;
        visibility: visible;
        width: auto;
    }

    .open .navItemsWrapper {
        overflow: visible;
    }
}
