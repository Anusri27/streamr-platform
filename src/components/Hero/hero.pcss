@import '@streamr/streamr-layout/pcss/variables.pcss';

.hero {
  background: var(--greyLight3);
}

@media (--md-down) {
  .heroContainer {
    padding-right: 0 !important;
    padding-left: 0 !important;
    width: 100%;
  }

  .heroRow {
    margin-right: 0;
    margin-left: 0;
  }

  .heroRow > [class^='col-'] {
    padding-right: 0;
    padding-left: 0;
  }
}
