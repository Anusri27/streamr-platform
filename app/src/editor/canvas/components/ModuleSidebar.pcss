.optionsFields {
  display: grid;
  grid-template-columns: auto 100px;
  align-items: center;
  grid-column-gap: 40px;

  label {
    font-family: var(--sans);
    font-weight: var(--medium);
    font-size: 14px;
    text-align: left;
    letter-spacing: 0;
    line-height: 40px;
    color: #525252;
    margin: 0;
  }

  .input {
    height: calc(1.5 * var(--um));
    margin: 0 calc(-0.5 * var(--um));
  }

  select {
    width: auto;
    color: #525252;
    font-size: 12px;
    font-family: inherit;
    background: #F5F5F5;
    border-radius: 2px;
    border: none;
  }
}

.helpContent {
  color: #525252;
  font-size: 14px;
  text-align: left;
  letter-spacing: 0;
  line-height: 24px;
}
