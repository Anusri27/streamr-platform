.editorDialog {
  width: 600px;
  position: absolute;
  z-index: 1;
  transform: none;
}

.editorContainer {
  padding: 24px;
  position: relative;
}

.editor {
  color: #2AC437;
  font-family: 'IBM Plex Mono', monospace;
  font-size: 12px;
  letter-spacing: 1px;
  line-height: 16px;

  & :global(.ace_gutter) {
    background: none !important;
    color: #ADADAD !important;
  }
}
