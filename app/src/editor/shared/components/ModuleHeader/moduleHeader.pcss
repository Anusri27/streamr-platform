.root {
  align-items: center;
  display: flex;
  justify-content: space-between;
  min-width: 92px; /* 24+40+1.75rem */
}

.name {
  flex-grow: 1;
  position: relative;
}

.idle {
  position: absolute;
  transform: translateY(-50%);
  width: 100%;
}

.expandToggle {
  flex-shrink: 0;
  height: 40px;
  width: 24px;
}

.menuToggle {
  flex-shrink: 0;
}
