.icon {
  margin: 20px 0 40px;
}

.buttonContainer {
  display: flex;
  margin-top: 42px;
}

.button:not(:last-child) {
  margin-right: 16px;
}

.message {
  display: block;
}

.mobileMessage {
  display: none;
}

@media (--xs) {
  .message {
    display: none;
  }

  .mobileMessage {
    display: block;
  }

  .icon {
    margin: 4.5rem 0 2.5rem;
  }

  .buttonContainer {
    margin-top: 15px;
    flex-direction: column;
  }

  .button:not(:last-child) {
    margin-right: 0;
    margin-bottom: 8px;
  }
}
