@import 'variables.pcss';

.hero {
  background: var(--greyLight3);
  padding: 2.5em 0;
}

@media (--md-down) {
  .heroContainer {
    width: 100%;
  }

  .heroRow {
    margin-right: 0;
    margin-left: 0;
  }

  .heroRow > [class^='col-'] {
    padding-right: 0;
    padding-left: 0;
  }
}

@media (--lg-up) {
  .hero {
    padding: 4em 0;
  }
}
