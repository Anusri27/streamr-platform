@import 'variables.pcss';

.root {
  font-size: 1rem;
}

.toggle {
  padding: 1em;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 1;
}

.menu {
  border: 0;
  border-radius: 0;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.35);
  font-size: 1em;
  left: auto !important;
  line-height: 2;
  right: 10px;
  top: -15px !important;
  transform: none !important;
  width: 160px;
}

.item {
  color: #303030;
  cursor: pointer;
}
