@import '@streamr/streamr-layout/pcss/variables.pcss';

.productTile {
  display: block;
  margin: 1em auto 0;
  border-radius: 2px;
  font-family: 'IBM Plex Sans', sans-serif;
  text-align: left;

  .row {
    margin-top: 0.3em;
  }

  :global(.dropdown > a) {
    padding: 10px;
    display: none;
    position: absolute;
    top: 0;
    right: 15px;
    z-index: 1;
  }

  &,
  &:--idle,
  &:--enter {
    a {
      color: black;
      text-decoration: none;
    }
  }

  :global(.dropdown-menu.show) {
    width: 160px !important;
    top: -15px !important;
    right: 10px !important;
    left: auto !important;
    font-size: 1rem;
    line-height: 2;
    border-radius: 0;
    border: none;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.35);
    transform: none !important;

    :global(.dropdown-item) {
      color: #303030;

      &:--enter {
        cursor: pointer;
      }
    }
  }
  /* stylelint-disable */
  &:--enter {
    :global(.dropdown > a) {
      display: inline-block;
    }
  }
  /* stylelint-enable */
  .invisible {
    display: none;
  }

  .containImg {
    position: relative;
    padding-top: 66.6667%;
  }

  .productImage {
    height: 100%;
    width: 100%;
    position: absolute !important;
    top: 0;
    background-size: cover;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    border-radius: 2px;
    margin-bottom: 10px;
    transition: 50ms ease-in-out transform;
  }

  &.loading {
    .row:last-child {
      width: 50%;
    }
  }

  .defaultImagePlaceholder {
    position: relative;
    background-image: linear-gradient(135deg, #0045FF 0%, #7200EE 100%);

    svg {
      position: absolute;
      width: 60px;
      height: 60px;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }
  }

  .productImage:--enter {
    filter: brightness(70%);
  }
}

.name {
  font-size: 1.15em;
  line-height: 1.2em;
  font-weight: var(--semiBold);
  margin-top: 0.5em;
  color: var(--greyDark);
}

.owner {
  font-size: 0.75em;
  line-height: 1em;
  font-weight: var(--medium);
  color: var(--greyLight5);
}

.price {
  font-size: 0.75em;
  line-height: 1em;
  font-weight: var(--medium);
  color: var(--greyDark);
}

.subscriptionStatus {
  font-size: 0.75em;
  line-height: 1em;
  font-weight: var(--medium);
}

.publishStatus {
  display: inline;
  font-size: 0.75em;
  line-height: 1em;
  font-weight: var(--light);
  padding: 2px 4px;
  color: var(--white);
  background-color: var(--purple2);
  border-radius: 2px;
}

