.profile {
  display: flex;
  margin: 24px 0 64px 0;
}

.avatar {
  flex-grow: 1;
}

.additionalComponent {
  display: flex;
  align-items: center;
}

.tabBar {
  background-color: rgba(255, 0, 0, 0.1);
  display: flex;
  line-height: 32px;
  overflow-x: auto;
}

.searchBar {
  background-color: rgba(0, 255, 0, 0.1);
  display: flex;
  margin-right: 36px;
  height: 45px;
  max-width: 190px;
}

.filterBar {
  background-color: rgba(0, 0, 255, 0.1);
  display: flex;
  margin-left: auto;
  right: 16px;
  position: relative;
}

.tabContainer {
  background-color: rgba(255, 0, 0, 0.1);
  display: flex;
  position: relative;
}

.tabs {
  display: flex;
}

@media (--md-down) {
  .filterBar {
    display: flex;
    margin-left: auto;
    position: absolute;
    right: 3px;
    top: 70px;
  }

  .containerOverrides {
    width: 100%;
    max-width: none;
  }
}

@media (--sm-down) {
  .filterBar {
    display: none;
  }
}
