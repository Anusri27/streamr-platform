.container {
  position: relative;
  max-width: 488px;
}

.actions {
  display: inline-block;
  position: absolute;
  right: 0.5rem;
  top: 50%;
  transform: translate(0, -50%);
  z-index: 1;
}

.withMenu {
  z-index: 2;
}

.offsetColOverride {
  z-index: -1;
}

.permissionDropdownContainer {
  position: absolute;
  bottom: 0;
  right: 0;
}

.select {
  display: flex;
  align-items: flex-end;
  height: 100%;
  width: 100%;
}
