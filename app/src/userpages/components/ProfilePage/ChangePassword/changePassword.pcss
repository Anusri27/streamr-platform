.content {
  text-align: left;

  a {
    color: #0324FF !important;
    font-size: 0.75em;
    outline: 0 !important;
    text-decoration: none;

    &:hover,
    &:focus {
      text-decoration: underline;
    }
  }
}

.currentPassword,
.newPassword,
.confirmNewPassword {
  width: 100%;
}

.newPassword {
  margin-top: 1rem;
}

.currentPassword {
  margin-top: 1.5rem;
}

.confirmNewPassword {
  margin-top: 3rem;
  margin-bottom: 0.5rem;
}

.forgotLink {
  float: right;
}
